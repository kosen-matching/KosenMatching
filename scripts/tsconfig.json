{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist-scripts",
    "rootDir": "../",
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["../scripts/**/*.ts", "../lib/**/*.ts", "../types/**/*.ts"],
  "exclude": ["node_modules"]
}
